{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],

    "resolveJsonModule": true,
    "allowJs": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,

    "plugins": [
      { "name": "next" },
      {
        "name": "typescript-plugin-css-modules",
        "options": { "goToDefinition": true }
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@supreme-int/*": ["packages/*"],
      "@supreme-int/api-client/client": ["packages/api-client/src/client.ts"],
      "@supreme-int/api-client/server": ["packages/api-client/src/server.ts"],
      "@supreme-int/api-client/types": ["packages/api-client/src/types.ts"]
    }
  },
  "include": ["global.d.ts"],
  "exclude": ["**/node_modules", "**/.next"]
}
