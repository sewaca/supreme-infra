{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],

    "resolveJsonModule": true,
    "allowJs": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,

    "plugins": [
      { "name": "next" },
      {
        "name": "typescript-plugin-css-modules",
        "options": { "goToDefinition": true }
      }
    ]
  },
  "exclude": ["**/node_modules", "**/.next"]
}
